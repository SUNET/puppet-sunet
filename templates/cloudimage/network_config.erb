version: 1
config:
 - type: physical
   mac_address: <%= @mac %>
   name: eth0
   subnets:
    - control: auto
<% if @ip or @ip6 -%>
      type: static
      address: |
<% if @ip -%>        <%= @ip %>
<%end -%>
<% if @ip6 -%>        <%= @ip6 %>
<%end -%>
<% elsif @dhcp -%>
      type: dhcp4
<%end -%>
<% if @resolver -%>
   dns:
      nameservers: <%= @resolver %>
<%end %>
