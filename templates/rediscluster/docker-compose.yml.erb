version: '3.2'
services:
<% numnodesmone = @numnodes - 1 -%>
<% for i in 0..numnodesmone -%>
<% clusterport = 7000 + i %>
<% redisport = 6379 + i %>
<% joinport = 16379 + i %>
  redis-node-<%= i %>:
    container_name: redis-node-<%= i %>
    image: redis:7-bookworm
    dns:
      - 89.46.20.75
      - 89.46.21.29
      - 89.32.32.32
<% if @hostmode == true %>
    network_mode: host
<% else %>
    ports:
      - "<%= redisport %>:<%= redisport %>"
      - "<%= joinport %>:<%= joinport %>"
<% end %>
    volumes:
      - /opt/redis/node-<%= i %>:/data
<% if @tls == true -%>
      - /etc/ssl:/etc/ssl
<% end %>
    command: redis-server /data/server.conf
    restart: always
<% end %>
