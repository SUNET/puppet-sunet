#!/bin/bash
my_host=$(hostname -f)
hosts=""
for host in <%= @cluster_nodes.join(' ') %>; do
  if [[ "${my_host}" == "${host}" ]]; then
    ip="$(hostname -I | awk '{print $1}')"
  else
    ip="$(host "${host}" | grep "has address" | awk '{print $NF}')"
  fi
  for port in <%= @cluster_ports.join(' ') %>; do
    hosts="${hosts} ${ip}:${port}"
  done
done

redis-cli --no-auth-warning -a <%= @redict_password %> --cluster create ${hosts} --cluster-replicas <%= @numnodes - 1 %>
