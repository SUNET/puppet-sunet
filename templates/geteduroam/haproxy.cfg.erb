global
    log 127.0.0.1 local0 notice
    user haproxy
    group haproxy

defaults
    log global
    retries 2
    timeout connect 3000
    timeout server 5000
    timeout client 5000

listen mysql-cluster
    bind :3306
    mode tcp
    option mysql-check
    balance first
<%- @db_servers.each do |db| -%>
    server <%= db %> <%= db %>:3306 check
<%- end -%>


