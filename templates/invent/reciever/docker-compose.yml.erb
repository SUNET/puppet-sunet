version: '3.1'
services:
    invent-reciever:
      container_name: reciever
      image: docker.sunet.se/invent/reciever:<%= @docker_tag %>
      dns:
        - 89.32.32.32
      ports:
        - "8000:8000"
      volumes:
<% @endpoints.each do |endpoint|-%>
        - "/opt/reciever/<%= endpoint %>:/app/<%= endpoint %>"
<% end -%>
        - "/opt/reciever/db:/app/db"
      stdin_open: true
      restart: always
