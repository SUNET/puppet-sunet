[Unit]
Description=DNSSEC validating local resolver
After=network.target
Wants=docker.service
# We ought to add BindsTo if Docker is installed, but it
# makes unbound not start if Docker is NOT installed
#BindsTo=docker.service

[Service]
Restart=always
StartLimitInterval=20
StartLimitBurst=5
TimeoutStartSec=0
RestartSec=5
# Restore /var/lib/unbound/root.key if it is empty (due to being updated while the disk was full probably)
ExecStart=-/usr/bin/test -f /var/lib/unbound/root.key && /usr/bin/test ! -s /var/lib/unbound/root.key && /usr/sbin/unbound-anchor -a /var/lib/unbound/root.key
ExecStart=/usr/sbin/unbound -d

[Install]
WantedBy=multi-user.target
Alias=unbound.service
