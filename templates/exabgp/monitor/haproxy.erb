#!/bin/sh

STATUS=`<%= @scriptdir %>/haproxy-status <%= @site %>`

if [ "x`echo $STATUS | grep ^UP\ `" ]; then
    exec <%= @hookdir %>/<%= @site %>_UP.sh
fi

if [ "x`echo $STATUS | grep ^DOWN\ `" ]; then
    exec <%= @hookdir %>/<%= @site %>_DOWN.sh
fi

echo "UNKNOWN STATUS for <%= @site %>:"
echo "$STATUS"

exit 1
