---
services:
  patroni:
    network_mode: host
    image: patroni:<%= @patroni_imagetag %>
    user: 5432:5432
    volumes:
      - '/opt/patroni/config/patroni.yml:/home/postgres/patroni.yml:ro'
      - '/opt/patroni/data:/home/postgres/data:rw'
    entrypoint: /usr/bin/python3
    command: /patroni.py patroni.yml
