version: '3.1'
services:
    document-server:
      container_name: docs
      image: <%= @docker_image %>:<%= @docker_tag %>
      dns:
        - 89.32.32.32
      ports:
        - "<%= @port %>:80"
      volumes:
        - "<%= @basedir %>/logs:/var/log/onlyoffice"
        - "<%= @basedir %>/data:/var/www/onlyoffice/Data"
        - "<%= @basedir %>/lib:/var/lib/onlyoffice"
      environment:
        <%- @ds_environment.each do |environ| -%>
        - "<%= environ %>"
        <%- end -%>
      stdin_open: true
      restart: always
      stop_grace_period: 60s

    rabbitmq:
      container_name: rabbitmq
      image: rabbitmq
      dns:
        - 89.32.32.32
      restart: always
      expose:
        - '5672'

    postgresql:
      container_name: postgres
      image: postgres:9.5
      dns:
        - 89.32.32.32
      environment:
        - POSTGRES_DB=onlyoffice
        - POSTGRES_USER=onlyoffice
        - POSTGRES_HOST_AUTH_METHOD=trust
      restart: always
      expose:
        - '5432'
      volumes:
        - /opt/onlyoffice/postgres/data:/var/lib/postgresql
<% if @postgres_backup -%>
        - '/etc/luna/cert:/usr/safenet/lunaclient/cert'
        - '/opt/onlyoffice/backup/postgres:/var/lib/postgresql/backup'
<% end -%>