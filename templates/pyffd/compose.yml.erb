---
version: '3'
services:

  haproxy:
    image: 'docker.sunet.se/library/haproxy:stable'
    restart: always
    ports:
     - 443:443
    volumes:
     - /opt/haproxy/:/etc/haproxy/:ro
     - <%= @tls_certificates[ @fqdn ][ 'haproxy' ] %>:<%= @tls_certificates[ @fqdn ][ 'haproxy' ] %>:ro
     - /dev/log:/dev/log
     - 'haproxy_control:/var/run/haproxy-control'

  pyffd:
    image: <%= @image %>:<%= @version %>
    restart: always
    volumes:
     - <%= @dir %>:<%= @dir %>
    environment:
     - "DATADIR=<%= @dir %>"
     - "PIPELINE=<%= @pipeline %>"
<% if @pyffd_args %>
     - "EXTRA_ARGS=<%= @pyffd_args %>"
<% endif %>
     - "LOGLEVEL=<%= @pyffd_loglevel %>"

volumes:
  haproxy_control:

networks:
  default:
    driver_opts:
      com.docker.network.bridge.name: br-pyff
