format = """
: \
$time\
$username\
$hostname\
$custom\
$git_branch\
$git_commit\
$git_state\
$git_metrics\
$git_status\
$directory\
$cmd_duration\
$character\
"""

[time]
disabled = false
format = '$time '
time_format = '%H:%M'
[username]
format = '[$user]()@'
[hostname]
ssh_symbol = ''
style = '<%= @host_color %>'
format = '[$ssh_symbol$hostname]($style): '

<% if @check_cosmos %>
[custom.cosmos]
command = 'echo !COSMOS'
when = ''' test -f /etc/no-automatic-cosmos '''
style = 'bold red'
<% end -%>
<% if @check_haproxy %>
[custom.haproxy]
command = 'echo !HAPROXY'
when = '''test -d /var/haproxy-status && find /var/haproxy-status -type f -prune -empty | grep -q /var'''
style = 'bold red'
<% end -%>
<% if @check_localusers %>
[custom.localusers]
command = 'echo LOCAL_USERS'
when = '''test -f /etc/multiverse/UNSAFE_allow_local_user'''
style = 'bold red'
<% end -%>

[git_branch]
format = '\([$branch]($style)\) '
[git_commit]
tag_disabled = false
tag_symbol = ' '
[directory]
style = '#008080'
truncate_to_repo = false
read_only = 'RO'
truncation_symbol = 'â€¦/'
