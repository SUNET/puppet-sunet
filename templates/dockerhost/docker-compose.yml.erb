services:
  <%= @name %>:
<% unless @flat_volumes.empty? -%>
    volumes:
<% @flat_volumes.each do |volume| -%>
      - <%= volume %>
<% end -%>
<% end -%>
<% if @hostname -%>
    hostname:  <%= @hostname %>
<% end -%>
<% unless @ports.empty? -%>
    ports:
<% @ports.each do |port| -%>
      - <%= port %>
<% end -%>
<% end -%>
<% unless @expose.empty? -%>
    expose:
<% @expose.each do |single_expose| -%>
      - <%= single_expose %>
<% end -%>
<% end -%>
<% unless @env.empty? -%>
    environment:
<% @env.each do |single_env| -%>
      - <%= single_env %>
<% end -%>
<% end -%>
    network: <%= @net %>
<% if @command -%>
    command:  <%= @command %>
<% end -%>
<% unless @dns.empty? -%>
    dns:
<% @dns.each do |resolver| -%>
      - <%= resolver %>
<% end -%>
<% end -%>
    image:<%= @image_tag %>
