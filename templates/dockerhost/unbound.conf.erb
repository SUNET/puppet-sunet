server:
       # Explicitly listen to the default interface. Otherwise, docker containers will get responses to
       # DNS queries with a source IP address different than the one they sent the request
       # to, which will get dropped.
       <% if @ipaddress_default -%>interface: <%= @ipaddress_default %><% end %>
       interface: 127.0.0.1
       interface: ::1
       access-control: 172.16.0.0/12 allow
       <% if @ipaddress_default -%>access-control: <%= @ipaddress_default %>/32 allow<% end %>
