{
    "default-address-pools": [
        {
            "base": "<%= @default_address_pools %>",
            "size": 24
        }
    ],
    "dns": "<%= scope.function_flatten([[@_docker_dns]]) %>",
    "fixed-cidr-v6": "<%= @docker_network_v6 -%>",
    "ip6tables": true,
    "ipv6": <%= @enable_ipv6 -%>,
    "log-driver": "json-file",
    "log-opts": {
        "max-size": "10k",
        "max-file": "3"
    },
    "storage-driver": "<%= @storage_driver -%>",
    "userland-proxy": false
}
