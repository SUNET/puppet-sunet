---
common:
  mongo:
    uri: mongodb://mongo:27017
  production: <%= @production %>
  basic_auth:
    ladok: xyz
  log:
    level:
    folder_path: "/var/log/sunet"

issuer:
  api_server:
    addr: vc_issuer:8080
  http_proxy:
  ca:
    addr: "<%= @ca_pdfsign_url %>"
    token: "<%= @ca_token %>"
    key_label: Ladok-sign-v1
    key_type: secp256r1
    location: "<%= @ca_location %>"
    reason: "<%= @ca_reason %>"
  key_value:
    db: 3
    addr: vc_redis:6379
    pdf:
      keep_signed_duration: 3600
      keep_unsigned_duration: 3600
  
datastore:
  api_server:
    addr: vc_datastore:8080

verifier:
  api_server:
    addr: vc_verifier:8080