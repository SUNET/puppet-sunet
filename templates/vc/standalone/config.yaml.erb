---
common:
  mongo:
    uri: mongodb://mongo:27017
  production: "<%= @production %>"
  basic_auth:
    ladok: xyz

issuer:
  api_server:
     addr: 172.16.50.10:8080
  http_proxy:
  log:
    level:
  ca:
    addr: "http://ca:8080/"
    token: "<%= @ca_token %>"
    key_label: Ladok-sign-v1
    key_type: secp256r1
  key_value:
    db: 3
    addr: redis:6379
    pdf:
      keep_signed_duration: 3600
      keep_unsigned_duration: 3600
  
datastore:
  api_server:
    addr: 172.16.50.11:8080
  

verifier:
  api_server:
    addr: 172.16.50.12:8080