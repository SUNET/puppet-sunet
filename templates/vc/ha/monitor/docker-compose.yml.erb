---
version: "3.3"

services:
  vc_jaeger:
    image: jaegertracing/all-in-one:latest
    container_name: vc_jaeger
    restart: always
    ports:
      - "16686:16686" # UI
      - "4317:4317" # OTLP collector grpc
      - "4318:4318" # OTLP collector http
    environment:
      - "COLLECTOR_OTLP_ENABLED=true"

networks:
  default:
    driver_opts:
      com.docker.network.bridge.name: br-vc_gateway
