---
common:
  mongo:
    #uri: mongodb://<%= @mongo_user %>:<%= @mongo_pw %>@vc_mongo:27017
    uri: mongodb://vc_mongo:27017
  production: <%= @production %>
  basic_auth:
    ladok: xyz
  log:
    level:
    folder_path: "/var/log/sunet"
  tracing:
    addr: vc_jaeger:4318
    type: jaeger
  queues:
    simple_queue:
      eduseal_sign:
        name: eduseal_sign
      eduseal_add_signed:
        name: eduseal_add_signed
      eduseal_del_signed:
        name: eduseal_del_signed
      eduseal_validate:
        name: eduseal_validate
      eduseal_persistent_save:
        name: eduseal_persistent_save
      vc_persistent_save:
        name: vc_persistent_save
      vc_persistent_get:
        name: vc_persistent_get
      vc_persistent_delete:
        name: vc_persistent_delete
  key_value:
    db: 3
    addr: vc_redis:6379
    password: test-password
  qr:
    base_url: "https://sunet.se"
    recovery_level: 2
    size: 256
    
apigw:
  api_server:
    addr: :8080
    tls:
      enabled: <%= @tls_enabled %>
      cert_file_path: <%= @tls_cert_file_path %>
      key_file_path: <%= @tls_key_file_path %>

persistent:
  api_server:
    addr: :8080