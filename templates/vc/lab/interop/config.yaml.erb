---
common:
  mongo:
    uri: mongodb://vc_mongo:27017
  production: <%= @production %>
  log:
    level:
    folder_path: "/var/log/sunet"
  tracing:
    addr: vc_jaeger:4318
    type: jaeger
  queues:
    simple_queue:
      vc_persistent_save:
        name: vc_persistent_save
      vc_persistent_get:
        name: vc_persistent_get
      vc_persistent_delete:
        name: vc_persistent_delete
      vc_persistent_replace:
        name: vc_persistent_replace
  key_value:
    db: 3
    addr: vc_redis:6379
    password: test-password
  qr:
    base_url: "https://sunet.se"
    recovery_level: 2
    size: 256

issuer:
  api_server:
    addr: :8080
  rpc_server:
    addr: :8090
  http_proxy:
  log:
    level:

verifier:
  api_server:
    addr: :8080
  rpc_server:
    addr: verifier:8090

registry:
  api_server:
    addr: :8080
  smt:
    update_periodicity: 5
    init_leaf: 575cea4a-5725-11ee-8287-2b486b7ace28
  rpc_server:
    addr: registry:8090

persistent:
  api_server:
    addr: :8080
    
apigw:
  api_server:
    addr: :8080
    tls:
      enabled: <%= @tls_enabled %>
      cert_file_path: <%= @tls_cert_file_path %>
      key_file_path: <%= @tls_key_file_path %>

persistent:
  api_server:
    addr: :8080

